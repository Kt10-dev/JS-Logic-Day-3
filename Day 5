// Question 1
// Unique Number Finder

// Ek array diya hai jisme baaki saare numbers 2â€“2 baar repeat ho rahe hain,
// sirf ek hi number aisa hai jo sirf 1 baar aaya.

// ðŸ‘‰ Us unique number ko find karo.

// Example:
// [4, 1, 2, 1, 2] â†’ Output: 4

let arr =[4, 1, 2, 1, 2] 

function UniqueFinder(arr){
  let xor = 0
  
  for(let i = 0;i < arr.length; i++){
  xor = xor ^ arr[i]
  }
  return xor;
}

let j =UniqueFinder(arr)
console.log(j)


