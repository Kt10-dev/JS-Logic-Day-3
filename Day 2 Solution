// Box A â†’ label says â€œRed Ballsâ€

// Box B â†’ label says â€œBlue Ballsâ€

// Box C â†’ label says â€œRed + Blue Mixedâ€

// BUT ek twist:

// ğŸ‘‰ saare labels galat lage hue hain.

// Ab tu sirf ek ball kisi ek box se nikal sakta hai
// aur usse tumhe batana hai ki
// kaun sa box kaun sa actual combination hold karta hai.



// Question 3 â€” â€œSum Until Single Digitâ€

// Ek number diya hai:

// 9875
// Output = 2


let num = 9875

function sumdigit(num){
  let sum = 0
  while(num > 0){
    sum += num % 10
    num =Math.floor(num/10)
  }
  return sum 
}


function ReducedString(num){
  while(num >10){
    num = sumdigit(num)
  }
  return num
}

console.log(ReducedString(num))










// Tumhe digits ka sum karte rehna hai
// jab tak result single digit na ban jaaye.
